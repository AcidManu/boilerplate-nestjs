{
  "name": "bnext-challenge",
  "version": "1.0.0",
  "description": "Bnext challenge",
  "author": "Acid Tango",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "rimraf dist && nest start",
    "start:dev": "rimraf dist && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typecheck": "tsc",
    "lint:check": "eslint --max-warnings 0 \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint --fix \"{src,apps,libs,test}/**/*.ts\"",
    "lint:ci": "yarn lint:check",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "test:ci": "yarn test:coverage",
    "test:e2e:db": "jest -c ./test/config/e2e-db.json",
    "migration:generate": "mikro-orm migration:create",
    "migration:run": "mikro-orm migration:up",
    "migration:revert": "mikro-orm migration:down",
    "run-checks": "yarn typecheck && yarn format && yarn lint"
  },
  "engines": {
    "node": "^14",
    "yarn": "~1.22"
  },
  "dependencies": {
    "@mikro-orm/cli": "4.5.9",
    "@mikro-orm/core": "4.5.9",
    "@mikro-orm/nestjs": "4.3.0",
    "@mikro-orm/postgresql": "4.5.9",
    "@mikro-orm/reflection": "4.5.9",
    "@nestjs/axios": "0.0.1",
    "@nestjs/common": "8.0.6",
    "@nestjs/core": "8.0.6",
    "@nestjs/platform-express": "8.0.6",
    "@nestjs/swagger": "5.0.9",
    "@nestjs/terminus": "8.0.0",
    "@nestjs/typeorm": "8.0.2",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "express": "4.17.1",
    "leaked-handles": "5.2.0",
    "morgan": "1.10.0",
    "node-fetch": "3.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.3.0",
    "swagger-ui-express": "4.1.6",
    "typeorm": "0.2.37",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@mikro-orm/migrations": "4.5.9",
    "@nestjs/cli": "8.1.1",
    "@nestjs/schematics": "8.0.3",
    "@nestjs/testing": "8.0.6",
    "@shopify/eslint-plugin": "40.4.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.1",
    "@types/morgan": "1.9.3",
    "@types/node": "16.7.13",
    "@types/node-fetch": "3.0.3",
    "@types/supertest": "2.0.11",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "14.0.0",
    "eslint-config-import": "0.13.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.1.0",
    "prettier": "2.3.2",
    "supertest": "6.1.6",
    "tepper": "0.3.3",
    "ts-jest": "27.0.5",
    "ts-loader": "9.2.5",
    "ts-node": "10.2.1",
    "tsconfig-paths": "3.11.0",
    "typescript": "4.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".(e2e-)?spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ]
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/database/orm.config.ts",
      "./dist/database/orm.config.ts"
    ]
  }
}
