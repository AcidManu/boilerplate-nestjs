{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "@shopify/eslint-plugin", "import"],
  "extends": ["airbnb-typescript/base", "plugin:@typescript-eslint/recommended", "plugin:import/recommended", "plugin:import/typescript"],
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "rules": {
    "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
    "@typescript-eslint/no-unused-vars": "warn",
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "import/prefer-default-export": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/no-empty-function": "warn",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/*.test.ts", "**/*.spec.ts", "**/*.integration-spec.ts", "test/**/*"]
      }
    ],
    "@typescript-eslint/naming-convention": [
      "warn",
      { "selector": "enum", "format": ["PascalCase"] },
      { "selector": "enumMember", "format": ["UPPER_CASE"] }
    ],
    "@shopify/typescript/prefer-singular-enums": "warn",
    "@shopify/typescript/prefer-pascal-case-enums": "off",
    "@typescript-eslint/semi": "off",
    "@typescript-eslint/quotes": "off",
    "operator-linebreak": "off",
    "@typescript-eslint/comma-dangle": "off",
    "curly": "off",
    "object-curly-newline": "off",
    "nonblock-statement-body-position": "off",
    "no-tabs": "warn",
    "arrow-body-style": "warn",
    "max-len": [
      "warn",
      {
        "code": 100, // Same line length than prettier
        "tabWidth": 2, // Same than prettier
        "ignorePattern": "import *",
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "import/no-default-export": "warn"
  }
}
